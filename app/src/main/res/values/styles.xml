<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textViewStyle">@style/Roboto</item>
        <item name="android:actionOverflowButtonStyle">@style/MyCustomThemeOverFlow</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/black</item>
    </style>

    <style name="ThemeSpinner">
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/black</item>
    </style>

    <style name="Roboto" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RobotoBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-bold</item>
    </style>

    <style name="RobotoLight" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoMedium" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RobotoRegular" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="TalkItemSecondaryText" parent="RobotoLight">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text_talk_item</item>
    </style>

    <style name="TalkItemTitleText" parent="Roboto">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1F1F1F</item>
    </style>

    <style name="TalkItemDelayedText" parent="RobotoMedium">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_color_delayed</item>
    </style>

    <style name="BoardTalkItemText" parent="RobotoMedium">
        <item name="android:textSize">@dimen/board_talk_item_text_size</item>
        <item name="android:textColor">@color/color_board_item_text</item>
        <item name="android:paddingLeft">@dimen/board_talk_item_text_margin_left</item>
    </style>

    <style name="BoardTalkItemInfoText" parent="RobotoLight">
        <item name="android:textSize">@dimen/board_talk_item_text_size</item>
        <item name="android:textColor">@color/color_board_item_text</item>
        <item name="android:paddingLeft">@dimen/board_talk_item_text_margin_left</item>
    </style>

    <style name="LoginButtons" parent="RobotoRegular">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>

    </style>

    <style name="FacebookLoginButton" parent="LoginButtons">
        <item name="android:background">@color/bg_fb_button</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="LoginFields" parent="Roboto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_email_edit_text</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLength">50</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_text_registration_container</item>
        <item name="android:textColorHint">@color/color_text_registration_container_hint</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoginFields.Email" parent="LoginFields">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:hint">@string/prompt_email_hint</item>
    </style>

    <style name="LoginFields.Password" parent="LoginFields">
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:hint">@string/prompt_password_hint</item>
    </style>

    <style name="TwitterButtonText" parent="RobotoMedium">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TalkFormFields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/color_hint_talk_form</item>
        <item name="android:textColor">@color/color_text_talk_item</item>
        <item name="backgroundTint">@color/color_hint_talk_form</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:theme">@style/EditTextTheme</item>
    </style>

    <style name="spinnerItemStyle" parent="RobotoRegular">
        <item name="android:textColor">@color/color_text_talk_item</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="spinnerItemStyle">
        <item name="android:padding">10dp</item>
    </style>

    <style name="MyCustomThemeOverFlow">
        <item name="android:src">@drawable/ic_action_menu</item>
        <item name="android:paddingRight">10dp</item>
    </style>

</resources>
